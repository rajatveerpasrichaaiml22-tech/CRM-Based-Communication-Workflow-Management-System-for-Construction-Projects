public class ProjectService {
    public static void assignDefaultPM(List<Project__c> projects){
        // Get one default Project Manager user dynamically
        User defaultPM = [SELECT Id FROM User WHERE Profile.Name = 'Project Manager' LIMIT 1];

        for(Project__c p : projects){
            if(p.Project_Manager__c == null){
                p.Project_Manager__c = defaultPM.Id;
            }
        }
    }
}
